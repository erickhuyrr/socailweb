<script>
// ===== MENU =====
const menuEl = document.getElementById("menu");
const overlayEl = document.getElementById("overlay");
const burgerBtn = document.getElementById("burgerBtn");

function toggleMenu(){
  const isOpen = menuEl.classList.contains("active");
  isOpen ? closeMenu() : openMenu();
}
function openMenu(){
  menuEl.classList.add("active");
  overlayEl.classList.add("active");
  burgerBtn.classList.add("open");
  document.body.style.overflow = "hidden";
}
function closeMenu(){
  menuEl.classList.remove("active");
  overlayEl.classList.remove("active");
  burgerBtn.classList.remove("open");
  document.body.style.overflow = "";
}
overlayEl.addEventListener("click", closeMenu);
overlayEl.addEventListener("touchstart", function(e){ e.preventDefault(); closeMenu(); }, {passive:false});

// ===== PARTICLES =====
const pc = document.getElementById("particles");
const cols = ["#38bdf8","#9333ea","#06b6d4","#f472b6","#facc15"];
for(let i=0;i<22;i++){
  const p = document.createElement("div");
  p.classList.add("particle");
  const s = Math.random()*8+4;
  p.style.cssText = `width:${s}px;height:${s}px;background:${cols[Math.floor(Math.random()*cols.length)]};left:${Math.random()*100}%;bottom:0;animation-duration:${Math.random()*5+4}s;animation-delay:${Math.random()*6}s;filter:blur(1px);`;
  pc.appendChild(p);
}

// ===== TYPEWRITER =====
const words = ["Hello, I'm Asmit adk","Creative Developer","UI Designer","Web Builder"];
let wi=0,ci=0,del=false;
const tx = document.getElementById("text");
function type(){
  const w = words[wi];
  tx.textContent = w.substring(0,ci);
  if(del) ci--; else ci++;
  if(!del && ci===w.length+1) setTimeout(()=>del=true,900);
  else if(del && ci===-1){del=false;ci=0;wi=(wi+1)%words.length;}
  setTimeout(type, del?55:110);
}
type();

// ===== QUOTE =====
const qWidget = document.getElementById("quoteWidget");
const qClose = document.getElementById("quoteCloseBtn");
let qTimer = setTimeout(()=>qWidget.classList.add("hidden"), 10000);
qClose.addEventListener("click", e=>{e.stopPropagation();clearTimeout(qTimer);qWidget.classList.add("hidden");});

async function loadQuote(){
  const t = document.getElementById("quoteText"), a = document.getElementById("quoteAuthor");
  try{
    const r = await fetch("https://goodreadsquotes.vercel.app/api/qotd");
    const d = await r.json();
    const q = d.quote||d.text||d.content||(d[0]&&(d[0].quote||d[0].text))||"";
    const au = d.author||d.by||(d[0]&&d[0].author)||"";
    t.classList.remove("quote-loading");
    t.textContent = q ? (q.length>100?q.substring(0,97)+"...":q) : "Stay inspired ✨";
    if(au){a.textContent="— "+au;a.style.display="block";}
  }catch(e){
    document.getElementById("quoteText").classList.remove("quote-loading");
    document.getElementById("quoteText").textContent="Stay inspired ✨";
  }
}
loadQuote();

// ===== MUSIC =====
const bgMusic = document.getElementById("bgMusic");
const musicOverlay = document.getElementById("musicOverlay");
const pmBar = document.getElementById("profileMusicBar");
const pmAnim = document.getElementById("profileMusicBarsAnim");
const pmLabel = document.getElementById("profileMusicBarLabel");
let playing = false;
bgMusic.volume = 0.35;

function syncBars(){
  pmAnim.classList.toggle("paused", !playing);
  pmLabel.textContent = playing ? "Playing" : "Paused";
}
function startMusic(){
  musicOverlay.style.animation = "fadeInOverlay .3s ease reverse forwards";
  setTimeout(()=>musicOverlay.style.display="none", 300);
  bgMusic.play().then(()=>{playing=true;pmBar.classList.add("visible");syncBars();}).catch(()=>{});
}
function closePopup(){
  musicOverlay.style.animation = "fadeInOverlay .3s ease reverse forwards";
  setTimeout(()=>musicOverlay.style.display="none", 300);
}
function toggleMusic(){
  playing ? bgMusic.pause() : bgMusic.play();
  playing = !playing;
  syncBars();
}

// ===== SKILL BARS ANIMATION (IntersectionObserver) =====
const skillFills = document.querySelectorAll(".skill-bar-fill");
const skillObs = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if(entry.isIntersecting){
      const fills = entry.target.querySelectorAll(".skill-bar-fill");
      fills.forEach((fill, i) => {
        const pct = fill.getAttribute("data-pct");
        setTimeout(() => {
          fill.style.width = pct + "%";
          fill.classList.add("animated");
        }, i * 120);
      });
      skillObs.unobserve(entry.target);
    }
  });
}, { threshold: 0.3 });

const skillWrap = document.getElementById("skillBarsWrap");
if(skillWrap) skillObs.observe(skillWrap);

// ===== DRAG QUOTE =====
(function(){
  const w = document.getElementById("quoteWidget");
  let drag=false,sx,sy;
  function gc(e){return e.touches?{x:e.touches[0].clientX,y:e.touches[0].clientY}:{x:e.clientX,y:e.clientY};}
  function down(e){
    if(e.target===qClose||e.target.closest(".quote-close")) return;
    drag=true;w.classList.add("dragging");
    const r=w.getBoundingClientRect();
    w.style.top=r.top+"px";w.style.bottom="auto";w.style.left=r.left+"px";
    const c=gc(e);sx=c.x-r.left;sy=c.y-r.top;
    e.preventDefault();e.stopPropagation();
  }
  function move(e){
    if(!drag) return;
    const c=gc(e);
    let nl=c.x-sx,nt=c.y-sy;
    nl=Math.max(4,Math.min(nl,window.innerWidth-w.offsetWidth-4));
    nt=Math.max(4,Math.min(nt,window.innerHeight-w.offsetHeight-4));
    w.style.left=nl+"px";w.style.top=nt+"px";
    e.preventDefault();
  }
  function up(){drag=false;w.classList.remove("dragging");}
  w.addEventListener("mousedown",down,{passive:false});
  document.addEventListener("mousemove",move,{passive:false});
  document.addEventListener("mouseup",up);
  w.addEventListener("touchstart",down,{passive:false});
  document.addEventListener("touchmove",move,{passive:false});
  document.addEventListener("touchend",up);
})();
</script>
