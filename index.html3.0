<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Asmit adk | Portfolio</title>
<link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;600;700;800&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<style>
*{margin:0;padding:0;box-sizing:border-box;scroll-behavior:smooth;}
:root{--sky:#38bdf8;--purple:#9333ea;--cyan:#06b6d4;--pink:#f472b6;--yellow:#facc15;--bg:#080f1e;}
body{background:var(--bg);color:#fff;overflow-x:hidden;font-family:'Syne',sans-serif;line-height:1.4;min-height:100vh;isolation:isolate;}

/* MUSIC POPUP */
.music-overlay{position:fixed;inset:0;background:rgba(0,0,0,0.75);backdrop-filter:blur(8px);z-index:9999;display:flex;align-items:center;justify-content:center;animation:fadeInOverlay .4s ease;}
@keyframes fadeInOverlay{from{opacity:0;}to{opacity:1;}}
.music-popup{background:rgba(13,27,46,0.97);border:1px solid rgba(56,189,248,0.25);border-radius:24px;padding:34px 28px 28px;text-align:center;max-width:300px;width:88%;box-shadow:0 0 60px rgba(56,189,248,0.15),0 20px 60px rgba(0,0,0,0.6);animation:popupIn .45s cubic-bezier(.34,1.56,.64,1) forwards;position:relative;overflow:hidden;}
@keyframes popupIn{from{opacity:0;transform:scale(0.8) translateY(20px);}to{opacity:1;transform:scale(1) translateY(0);}}
.music-popup::before{content:"";position:absolute;top:-60px;left:50%;transform:translateX(-50%);width:180px;height:180px;border-radius:50%;background:radial-gradient(circle,rgba(56,189,248,0.12),transparent 70%);pointer-events:none;}
.music-popup-icon{width:64px;height:64px;border-radius:50%;background:linear-gradient(135deg,rgba(56,189,248,0.15),rgba(147,51,234,0.15));border:1px solid rgba(56,189,248,0.3);display:flex;align-items:center;justify-content:center;margin:0 auto 18px;font-size:26px;color:var(--sky);animation:iconPulse 2s ease-in-out infinite;}
@keyframes iconPulse{0%,100%{box-shadow:0 0 0 0 rgba(56,189,248,0.3);}50%{box-shadow:0 0 0 12px rgba(56,189,248,0);}}
.music-popup h3{font-size:17px;font-weight:800;margin-bottom:6px;background:linear-gradient(135deg,#fff,var(--sky));-webkit-background-clip:text;-webkit-text-fill-color:transparent;}
.music-popup p{font-size:11px;color:rgba(255,255,255,0.5);font-family:'Space Mono',monospace;margin-bottom:24px;line-height:1.6;}
.music-popup-btns{display:flex;gap:10px;justify-content:center;}
.btn-music-yes,.btn-music-no{flex:1;padding:11px 0;border-radius:12px;font-size:13px;font-weight:700;font-family:'Syne',sans-serif;border:none;cursor:pointer;transition:.25s;display:flex;align-items:center;justify-content:center;gap:7px;}
.btn-music-yes{background:linear-gradient(135deg,var(--sky),var(--purple));color:#fff;box-shadow:0 4px 18px rgba(56,189,248,0.3);}
.btn-music-yes:hover{transform:translateY(-2px);}
.btn-music-no{background:rgba(255,255,255,0.05);color:rgba(255,255,255,0.5);border:1px solid rgba(255,255,255,0.1);}
.btn-music-no:hover{background:rgba(255,255,255,0.1);color:rgba(255,255,255,0.75);}

/* MUSIC BAR ANIM */
.music-bar-anim{display:flex;align-items:flex-end;gap:2px;height:12px;}
.music-bar-anim span{width:3px;border-radius:2px;background:linear-gradient(to top,var(--sky),var(--purple));animation:barBounce .8s ease-in-out infinite;}
.music-bar-anim span:nth-child(1){height:4px;animation-delay:0s;}
.music-bar-anim span:nth-child(2){height:10px;animation-delay:.15s;}
.music-bar-anim span:nth-child(3){height:7px;animation-delay:.3s;}
.music-bar-anim span:nth-child(4){height:11px;animation-delay:.1s;}
.music-bar-anim.paused span{animation-play-state:paused;}
@keyframes barBounce{0%,100%{transform:scaleY(0.4);}50%{transform:scaleY(1);}}

/* PROFILE MUSIC BAR */
.profile-music-bar{display:none;align-items:center;gap:7px;background:rgba(13,27,46,0.75);border:1px solid rgba(56,189,248,0.2);border-radius:50px;padding:5px 12px 5px 8px;backdrop-filter:blur(12px);cursor:pointer;transition:.3s;margin:10px auto 0;width:fit-content;}
.profile-music-bar:hover{border-color:rgba(56,189,248,0.5);}
.profile-music-bar.visible{display:flex;}
.profile-music-bar .pm-icon{width:22px;height:22px;border-radius:50%;background:linear-gradient(135deg,var(--sky),var(--purple));display:flex;align-items:center;justify-content:center;font-size:9px;color:#fff;flex-shrink:0;}
.profile-music-bar .pm-label{font-size:9px;font-family:'Space Mono',monospace;color:rgba(255,255,255,0.6);white-space:nowrap;}

/* NAVBAR */
.navbar{position:fixed;top:0;width:100%;height:58px;background:rgba(8,15,30,0.6);backdrop-filter:blur(18px);display:flex;align-items:center;justify-content:space-between;padding:0 18px;z-index:1000;border-bottom:1px solid rgba(56,189,248,0.15);}
.logo{font-weight:800;font-size:20px;letter-spacing:1px;background:linear-gradient(90deg,var(--sky),var(--purple),var(--pink));-webkit-background-clip:text;-webkit-text-fill-color:transparent;}
.burger{width:36px;height:36px;display:flex;flex-direction:column;align-items:center;justify-content:center;gap:5px;cursor:pointer;padding:4px;border-radius:9px;transition:.2s;-webkit-tap-highlight-color:transparent;}
.burger:hover{background:rgba(56,189,248,0.1);}
.burger .b-line{width:22px;height:2px;border-radius:2px;background:var(--sky);transition:transform .35s cubic-bezier(.77,0,.18,1),opacity .25s,width .3s;transform-origin:center;}
.burger .b-line.short{width:15px;align-self:flex-start;margin-left:2px;}
.burger.open .b-line:nth-child(1){transform:translateY(7px) rotate(45deg);}
.burger.open .b-line.short{opacity:0;transform:scaleX(0);}
.burger.open .b-line:nth-child(3){transform:translateY(-7px) rotate(-45deg);}

/* QUOTE WIDGET */
.quote-widget{position:fixed;bottom:16px;left:10px;z-index:990;max-width:140px;width:140px;user-select:none;-webkit-user-select:none;touch-action:none;opacity:1;transition:opacity 0.5s ease,transform 0.5s ease;}
.quote-widget.hidden{opacity:0;transform:translateY(8px);pointer-events:none;}
.quote-widget.dragging{opacity:0.9;transition:none !important;}
.quote-dots{display:flex;align-items:center;gap:3px;margin-bottom:4px;padding:0 2px;cursor:grab;}
.quote-dots:active{cursor:grabbing;}
.quote-dots span{width:6px;height:6px;border-radius:50%;display:inline-block;}
.dot-red{background:#ff5f57;}.dot-yellow{background:#febc2e;}.dot-green{background:#28c840;}
.quote-close{margin-left:auto;width:14px;height:14px;border-radius:50%;background:rgba(255,255,255,0.08);border:1px solid rgba(255,255,255,0.15);display:flex;align-items:center;justify-content:center;cursor:pointer;font-size:7px;color:rgba(255,255,255,0.5);transition:.2s;flex-shrink:0;}
.quote-close:hover{background:rgba(255,80,80,0.25);border-color:rgba(255,80,80,0.5);color:#ff6b6b;}
.quote-bubble{background:rgba(13,27,46,0.88);border:1px solid rgba(56,189,248,0.18);border-radius:0 8px 8px 8px;padding:6px 8px;backdrop-filter:blur(14px);box-shadow:0 4px 24px rgba(0,0,0,0.4);animation:quoteSlideIn .5s ease forwards;cursor:grab;position:relative;}
.quote-bubble:active{cursor:grabbing;}
@keyframes quoteSlideIn{from{opacity:0;transform:translateY(-8px);}to{opacity:1;transform:translateY(0);}}
.quote-bubble::before{content:"";position:absolute;top:-1px;left:0;width:1px;height:12px;background:rgba(56,189,248,0.18);}
.quote-icon{font-size:7px;color:var(--sky);opacity:0.7;margin-bottom:3px;display:block;}
.quote-text{font-size:8px;font-family:'Space Mono',monospace;color:rgba(255,255,255,0.75);line-height:1.5;display:-webkit-box;-webkit-line-clamp:3;-webkit-box-orient:vertical;overflow:hidden;}
.quote-author{font-size:7px;font-family:'Space Mono',monospace;color:var(--sky);margin-top:4px;opacity:0.85;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.quote-loading{font-size:8px;font-family:'Space Mono',monospace;color:rgba(255,255,255,0.35);display:flex;align-items:center;gap:5px;}
.quote-loading::before{content:"";width:6px;height:6px;border-radius:50%;border:1px solid var(--sky);border-top-color:transparent;animation:spin .7s linear infinite;display:inline-block;}
@keyframes spin{100%{transform:rotate(360deg);}}

/* OVERLAY */
.overlay{position:fixed;inset:0;background:rgba(0,0,0,0.5);opacity:0;visibility:hidden;transition:.35s;z-index:998;cursor:pointer;}
.overlay.active{opacity:1;visibility:visible;}

/* MENU */
.menu{position:fixed;top:0;right:-100%;width:72%;max-width:290px;height:100%;z-index:999;display:flex;flex-direction:column;overflow:hidden;transition:.42s cubic-bezier(.77,0,.18,1);background:linear-gradient(165deg,#07111f 0%,#0a1a30 55%,#0c1e3a 100%);border-left:1px solid rgba(56,189,248,0.1);}
.menu.active{right:0;}
.menu-glow-top{position:absolute;top:-70px;right:-50px;width:200px;height:200px;border-radius:50%;background:radial-gradient(circle,rgba(56,189,248,0.1),transparent 70%);pointer-events:none;}
.menu-glow-bot{position:absolute;bottom:-50px;left:-30px;width:170px;height:170px;border-radius:50%;background:radial-gradient(circle,rgba(147,51,234,0.1),transparent 70%);pointer-events:none;}
.menu-header{padding:20px 20px 16px;border-bottom:1px solid rgba(255,255,255,0.05);display:flex;align-items:center;justify-content:space-between;position:relative;z-index:2;}
.menu-brand{display:flex;flex-direction:column;gap:1px;}
.menu-brand-name{font-size:15px;font-weight:800;letter-spacing:1.5px;background:linear-gradient(90deg,var(--sky),var(--purple));-webkit-background-clip:text;-webkit-text-fill-color:transparent;}
.menu-brand-sub{font-size:8px;font-family:'Space Mono',monospace;color:rgba(255,255,255,0.22);letter-spacing:1.5px;}
.menu-x{width:30px;height:30px;border-radius:8px;background:rgba(255,255,255,0.05);border:1px solid rgba(255,255,255,0.09);display:flex;align-items:center;justify-content:center;cursor:pointer;color:rgba(255,255,255,0.4);font-size:12px;transition:.2s;}
.menu-x:hover{background:rgba(255,80,80,0.15);border-color:rgba(255,80,80,0.35);color:#ff7070;}
.menu-nav{padding:20px 16px;display:flex;flex-direction:column;gap:6px;flex:1;position:relative;z-index:2;}
.nav-item{display:flex;align-items:center;gap:12px;padding:12px 14px;border-radius:12px;text-decoration:none;color:rgba(255,255,255,0.6);border:1px solid transparent;transition:.25s;position:relative;overflow:hidden;cursor:pointer;}
.nav-item::after{content:"";position:absolute;inset:0;border-radius:12px;background:linear-gradient(90deg,rgba(56,189,248,0.07),rgba(147,51,234,0.04));opacity:0;transition:.25s;}
.nav-item:hover{color:#fff;border-color:rgba(56,189,248,0.2);transform:translateX(3px);}
.nav-item:hover::after{opacity:1;}
.nav-num{font-size:8px;font-family:'Space Mono',monospace;color:rgba(56,189,248,0.4);min-width:14px;font-weight:700;position:relative;z-index:1;}
.nav-icon-wrap{width:34px;height:34px;border-radius:9px;background:rgba(56,189,248,0.07);border:1px solid rgba(56,189,248,0.12);display:flex;align-items:center;justify-content:center;font-size:13px;color:var(--sky);transition:.25s;flex-shrink:0;position:relative;z-index:1;}
.nav-item:hover .nav-icon-wrap{background:rgba(56,189,248,0.14);border-color:rgba(56,189,248,0.3);box-shadow:0 0 12px rgba(56,189,248,0.15);}
.nav-text{position:relative;z-index:1;}
.nav-text span{display:block;font-size:13px;font-weight:800;letter-spacing:.2px;}
.nav-text small{font-size:8.5px;font-family:'Space Mono',monospace;color:rgba(255,255,255,0.25);}
.menu-divider{height:1px;background:linear-gradient(90deg,transparent,rgba(56,189,248,0.1),transparent);margin:4px 16px;position:relative;z-index:2;}
.menu-footer{padding:14px 20px 28px;position:relative;z-index:2;border-top:1px solid rgba(255,255,255,0.05);}
.menu-footer-label{font-size:8px;font-family:'Space Mono',monospace;color:rgba(255,255,255,0.18);letter-spacing:2px;text-transform:uppercase;margin-bottom:12px;}
.menu-socials-row{display:flex;align-items:center;gap:9px;}
.msoc{width:38px;height:38px;border-radius:11px;display:flex;align-items:center;justify-content:center;text-decoration:none;font-size:15px;border:1px solid;transition:.22s;flex-shrink:0;}
.msoc:hover{transform:translateY(-3px);}
.msoc-tg{background:rgba(0,136,204,0.1);border-color:rgba(0,136,204,0.25);color:#29aee6;}
.msoc-tg:hover{background:rgba(0,136,204,0.2);border-color:#29aee6;box-shadow:0 4px 14px rgba(0,136,204,0.25);}
.msoc-tt{background:rgba(255,255,255,0.05);border-color:rgba(255,255,255,0.1);color:rgba(255,255,255,0.75);}
.msoc-tt:hover{background:rgba(255,255,255,0.12);border-color:rgba(255,255,255,0.3);box-shadow:0 4px 14px rgba(255,255,255,0.1);}
.msoc-ig{background:rgba(228,64,95,0.08);border-color:rgba(228,64,95,0.2);color:#f472b6;}
.msoc-ig:hover{background:rgba(228,64,95,0.18);border-color:#f472b6;box-shadow:0 4px 14px rgba(244,114,182,0.25);}
.msoc-fb{background:rgba(24,119,242,0.08);border-color:rgba(24,119,242,0.2);color:#60a5fa;}
.msoc-fb:hover{background:rgba(24,119,242,0.18);border-color:#60a5fa;box-shadow:0 4px 14px rgba(96,165,250,0.25);}
.menu-footer-copy{font-size:8px;font-family:'Space Mono',monospace;color:rgba(255,255,255,0.14);margin-top:14px;letter-spacing:.5px;}

/* BANNER */
.banner{position:relative;width:100%;height:200px;margin-top:58px;overflow:hidden;border-bottom:1px solid rgba(255,255,255,0.08);flex-shrink:0;}
.banner-gif{position:absolute;inset:0;background:url('https://media.giphy.com/media/v1.Y2lkPWVjZjA1ZTQ3YjNpb2NhOHZqY2cycHV3d2tveTdwcHFkdDdsdTF1eXNoYmU4NzlqcyZlcD12MV9naWZzX3NlYXJjaCZjdD1n/3o7buhhFGlZICwURK8/giphy.gif') center/cover no-repeat;filter:brightness(0.9) saturate(1.2);}
.banner-blobs{position:absolute;inset:0;opacity:0.4;mix-blend-mode:screen;}
.banner-particles{position:absolute;inset:0;overflow:hidden;}
.particle{position:absolute;border-radius:50%;animation:floatParticle linear infinite;opacity:0;will-change:transform,opacity;}
@keyframes floatParticle{0%{transform:translateY(120%) scale(0);opacity:0;}10%{opacity:0.8;}90%{opacity:0.25;}100%{transform:translateY(-10px) scale(1.4);opacity:0;}}
.banner-glass{position:absolute;inset:0;background:rgba(8,15,30,0.22);backdrop-filter:blur(1.5px);}
.banner::after{content:"";position:absolute;bottom:0;left:0;width:100%;height:80px;background:linear-gradient(to bottom,transparent,var(--bg));z-index:4;}

/* PROFILE */
.profile-section{text-align:center;margin-top:-55px;position:relative;z-index:10;padding-bottom:10px;}
.profile-wrapper{position:relative;width:120px;height:120px;margin:auto;}
.profile-wrapper::before{content:"";position:absolute;inset:-4px;border-radius:50%;background:conic-gradient(var(--sky),var(--purple),var(--cyan),var(--pink),var(--sky));animation:spinRing 4s linear infinite;will-change:transform;}
.profile-wrapper::after{content:"";position:absolute;inset:2px;border-radius:50%;background:var(--bg);z-index:0;}
.profile-wrapper img{width:100%;height:100%;border-radius:50%;object-fit:cover;position:relative;z-index:1;border:3px solid var(--bg);}
@keyframes spinRing{100%{transform:rotate(360deg);}}
.typewriter-wrap{margin-top:12px;display:inline-flex;align-items:center;gap:4px;}
.animated-text{font-size:20px;font-weight:800;letter-spacing:1px;background:linear-gradient(90deg,var(--sky),var(--purple),var(--cyan),var(--pink),var(--yellow));background-size:400%;-webkit-background-clip:text;-webkit-text-fill-color:transparent;animation:gradientMove 5s infinite linear;}
@keyframes gradientMove{0%{background-position:0%;}100%{background-position:400%;}}
.cursor{display:inline-block;width:2px;height:22px;background:var(--sky);animation:blink .7s infinite;border-radius:2px;}
@keyframes blink{50%{opacity:0;}}
.flag-gif{position:absolute;bottom:1px;right:-2px;width:36px;height:36px;}
.flag-gif img{width:100%;height:100%;border-radius:50%;}

/* SECTIONS */
section{padding:30px 6%;text-align:center;}
.section-title{display:inline-flex;align-items:center;gap:10px;font-size:13px;font-weight:700;letter-spacing:3px;text-transform:uppercase;color:var(--sky);margin-bottom:6px;font-family:'Space Mono',monospace;}
.section-title::before,.section-title::after{content:"";flex:1;height:1px;background:linear-gradient(90deg,transparent,var(--sky));min-width:20px;}
h2{font-size:26px;font-weight:800;margin-bottom:14px;background:linear-gradient(135deg,#fff 30%,var(--sky));-webkit-background-clip:text;-webkit-text-fill-color:transparent;}

/* ABOUT */
.about-card{max-width:560px;margin:14px auto 0;background:rgba(13,27,46,0.7);border:1px solid rgba(56,189,248,0.15);border-radius:18px;padding:22px 24px;backdrop-filter:blur(10px);position:relative;overflow:hidden;}
.about-card::before{content:"";position:absolute;top:-40px;right:-40px;width:130px;height:130px;border-radius:50%;background:radial-gradient(circle,rgba(147,51,234,0.25),transparent 70%);}
.about-card p{font-size:14px;line-height:1.7;color:rgba(255,255,255,0.75);font-weight:400;font-family:'Space Mono',monospace;}
.about-card p span{color:var(--sky);font-weight:700;}

/* SKILLS */
.skills-grid{display:flex;flex-wrap:wrap;justify-content:center;gap:12px;margin-top:16px;}
.skill-box{background:rgba(13,27,46,0.8);border:1px solid rgba(56,189,248,0.12);padding:11px 18px;border-radius:12px;display:flex;align-items:center;gap:9px;font-size:13px;font-weight:700;letter-spacing:.5px;transition:.3s;cursor:default;position:relative;overflow:hidden;}
.skill-box::before{content:"";position:absolute;inset:0;background:linear-gradient(135deg,rgba(56,189,248,0.06),rgba(147,51,234,0.06));opacity:0;transition:.3s;}
.skill-box:hover{border-color:rgba(56,189,248,0.5);transform:translateY(-3px);}
.skill-box:hover::before{opacity:1;}
.skill-box i{font-size:16px;}
.skill-box:nth-child(1) i{color:#e34c26;}
.skill-box:nth-child(2) i{color:#264de4;}
.skill-box:nth-child(3) i{color:#f7df1e;}
.skill-box:nth-child(4) i{color:var(--sky);}
.skill-box:nth-child(5) i{color:var(--pink);}

/* SKILL BARS */
.skill-bars-wrap{max-width:500px;margin:28px auto 0;display:flex;flex-direction:column;gap:18px;}
.skill-bar-item{}
.skill-bar-top{display:flex;justify-content:space-between;align-items:center;margin-bottom:7px;}
.skill-bar-name{font-size:12px;font-weight:700;font-family:'Space Mono',monospace;color:rgba(255,255,255,0.85);display:flex;align-items:center;gap:8px;}
.skill-bar-name i{font-size:13px;}
.skill-bar-name .sbn-html{color:#e34c26;}
.skill-bar-name .sbn-css{color:#264de4;}
.skill-bar-name .sbn-js{color:#f7df1e;}
.skill-bar-name .sbn-ui{color:var(--sky);}
.skill-bar-name .sbn-resp{color:var(--pink);}
.skill-bar-pct{font-size:11px;font-family:'Space Mono',monospace;color:var(--sky);font-weight:700;}
.skill-bar-track{width:100%;height:8px;border-radius:99px;background:rgba(255,255,255,0.06);border:1px solid rgba(255,255,255,0.07);overflow:hidden;position:relative;}
.skill-bar-fill{height:100%;border-radius:99px;width:0;transition:width 1.4s cubic-bezier(.22,1,.36,1);position:relative;}
.skill-bar-fill::after{content:"";position:absolute;right:0;top:50%;transform:translateY(-50%);width:10px;height:10px;border-radius:50%;background:#fff;box-shadow:0 0 8px currentColor;opacity:0;transition:opacity .3s .8s;}
.skill-bar-fill.animated::after{opacity:1;}
.fill-html{background:linear-gradient(90deg,#e34c26,#f97316);}
.fill-css{background:linear-gradient(90deg,#264de4,#38bdf8);}
.fill-js{background:linear-gradient(90deg,#ca8a04,#f7df1e);}
.fill-ui{background:linear-gradient(90deg,var(--sky),var(--cyan));}
.fill-resp{background:linear-gradient(90deg,var(--purple),var(--pink));}

/* glow shimmer on bars */
.skill-bar-fill::before{content:"";position:absolute;top:0;left:-60%;width:40%;height:100%;background:linear-gradient(90deg,transparent,rgba(255,255,255,0.25),transparent);animation:shimmer 2.5s ease-in-out infinite;animation-delay: var(--sh-delay, 0s);}
@keyframes shimmer{0%{left:-60%;}100%{left:110%;}}

/* PROJECTS */
.projects-grid{display:flex;flex-wrap:wrap;justify-content:center;gap:16px;margin-top:16px;}
.project-box{background:rgba(13,27,46,0.75);border:1px solid rgba(56,189,248,0.1);border-radius:16px;padding:20px;width:210px;text-align:left;transition:.35s;position:relative;overflow:hidden;cursor:pointer;}
.project-box::after{content:"";position:absolute;bottom:0;left:0;width:100%;height:3px;background:linear-gradient(90deg,var(--sky),var(--purple),var(--pink));transform:scaleX(0);transform-origin:left;transition:.35s;}
